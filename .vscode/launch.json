    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "dot expander",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dot-expander.js",
            "args": [ "_1.tokens"]
        }
    ]
}